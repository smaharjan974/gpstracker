<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanjay.monitoring.MainActivity"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalheight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="@dimen/largepadding"
                >

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/smallheight"
                    android:layout_weight="2"
                    android:background="@drawable/custom_edit_text_box"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="@dimen/smallpadding"
                    android:hint="UserName"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/largepadding"
                >

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/smallheight"
                    android:layout_weight="2"
                    android:background="@drawable/custom_edit_text_box"
                    android:drawableLeft="@drawable/ic_locked_padlock"
                    android:drawablePadding="@dimen/smallpadding"
                    android:hint="Password"
                    android:inputType="textPassword"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/largepadding"
                android:weightSum="3"
                >

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

                <CheckBox
                    android:id="@+id/remember"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/white"
                    android:text="Remember me"
                    android:textSize="@dimen/normaltextsize"
                    android:textStyle="bold"
                    android:buttonTint="@color/white"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/largepadding"
                android:layout_marginBottom="@dimen/largepadding"
                >

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    />

                <Button
                    android:id="@+id/login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:background="@drawable/custom_bottom"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normaltextsize"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/demoversion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/largepadding"
                android:text="View For Demo Version"
                android:textColor="@color/white"
                android:textSize="@dimen/normaltextsize"
                android:gravity="center"
                android:layout_marginBottom="@dimen/largepadding"
                />


            <TextView
                android:id="@+id/ordernow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Order a Device Now!"
                android:textSize="@dimen/normaltextsize"
                android:textColor="@color/white"
                android:gravity="center"
                />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
