<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sanjay.monitoring.DeviceList.DeviceListActivity"
    tools:showIn="@layout/app_bar_device_list"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_margin="@dimen/largepadding"
    android:id="@+id/mainfragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/verysmallheight"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="@dimen/smallpadding"
        >

        <TextView
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="All"
            android:gravity="center"
            android:textSize="@dimen/largetextsize"
            android:textColor="@color/white"
            android:background="@color/skyblue"
            />

        <TextView
            android:id="@+id/standby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stand By"
            android:gravity="center"
            android:textSize="@dimen/largetextsize"
            android:textColor="@color/skyblue"
            android:background="@drawable/custom_rectangle_sky_blue"
            />

        <TextView
            android:id="@+id/moving"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Moving"
            android:gravity="center"
            android:textSize="@dimen/largetextsize"
            android:textColor="@color/skyblue"
            android:background="@drawable/custom_rectangle_sky_blue"
            />

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/verysmallheight"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:background="@drawable/custom_edit_box"
        android:hint="Name"
        android:gravity="center"
        />

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:layout_margin="@dimen/smallpadding"
        ></FrameLayout>

</LinearLayout>
